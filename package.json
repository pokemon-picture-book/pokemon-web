{
    "name": "pokemon-web",
    "version": "0.1.0",
    "private": true,
    "scripts": {
        "serve": "json-server --watch ./json-server/db.json",
        "dev": "vite --host 0.0.0.0 --port 8080",
        "build": "rm -rf dist && vite build --mode production",
        "tsc": "tsc --noEmit && vue-tsc --noEmit",
        "test:unit": "jest tests/unit",
        "test:unit:sonar": "npm run test:unit -- --coverage",
        "test:e2e": "start-server-and-test dev http-get://localhost:3000 cypress",
        "cypress": "cypress run",
        "lint": "eslint --ext .ts,.js,.vue --ignore-path .gitignore .",
        "lint:sonar": "npm run lint -- -f json -o lint-report.json .",
        "stylelint": "stylelint --ignore-path .gitignore '**/*.{vue,css,scss}'",
        "format": "prettier --write --ignore-path .gitignore '**/*.{js,ts,vue,json}'",
        "style-format": "stylelint --ignore-path .gitignore '**/*.{vue,css,scss}' --fix",
        "storybook": "NODE_ENV=local start-storybook -s ./src/assets -p 6006",
        "build-storybook": "NODE_ENV=local build-storybook -s src/assets",
        "sonar:scan": "sonar-scanner",
        "sonar": "run-s test:unit:sonar lint:sonar sonar:scan",
        "prepare": "husky install",
        "lint-staged": "lint-staged"
    },
    "dependencies": {
        "axios": "0.21.1",
        "core-js": "^3.6.5",
        "icon-blender": "1.0.0-beta.4",
        "infinite-loading-vue3-ts": "1.0.5",
        "pokemon-font": "1.8.1",
        "react": "17.0.1",
        "react-dom": "17.0.1",
        "register-service-worker": "^1.7.1",
        "vue": "^3.2.20",
        "vue-infinite-loading": "2.4.5",
        "vue-router": "^4.0.0-0"
    },
    "devDependencies": {
        "@babel/core": "7.12.10",
        "@storybook/addon-actions": "6.3.0-alpha.38",
        "@storybook/addon-controls": "6.3.9",
        "@storybook/addon-essentials": "6.3.0-alpha.38",
        "@storybook/addon-knobs": "6.2.9",
        "@storybook/vue3": "6.3.0-alpha.38",
        "@types/axios": "0.14.0",
        "@types/eslint": "8.2.0",
        "@types/jest": "27.0.2",
        "@types/prettier": "2.4.1",
        "@typescript-eslint/eslint-plugin": "^2.33.0",
        "@typescript-eslint/parser": "^2.33.0",
        "@vitejs/plugin-vue": "1.9.2",
        "@vue/compiler-sfc": "3.2.13",
        "@vue/eslint-config-prettier": "6.0.0",
        "@vue/eslint-config-standard": "^5.1.2",
        "@vue/eslint-config-typescript": "^7.0.0",
        "@vue/test-utils": "2.0.0-rc.15",
        "babel-loader": "8.2.2",
        "cypress": "8.5.0",
        "eslint": "^6.7.2",
        "eslint-plugin-cypress": "2.12.1",
        "eslint-plugin-vue": "^7.0.0-0",
        "http-server": "0.12.3",
        "husky": "^7.0.2",
        "jest": "27.2.4",
        "json-server": "0.17.0",
        "lint-staged": "11.2.3",
        "npm-run-all": "4.1.5",
        "prettier": "2.2.1",
        "sass": "^1.43.2",
        "sass-loader": "^8.0.2",
        "sonarqube-scanner": "2.8.0",
        "start-server-and-test": "1.14.0",
        "stylelint": "13.13.1",
        "stylelint-config-standard": "22.0.0",
        "stylelint-scss": "3.19.0",
        "ts-jest": "26.5.6",
        "typescript": "4.4.3",
        "vite": "2.6.5",
        "vue-jest": "5.0.0-alpha.10",
        "vue-loader": "16.2.0",
        "vue-tsc": "0.3.0"
    },
    "lint-staged": {
        "*.{js,ts,vue,json}": [
            "npm run format",
            "git add"
        ],
        "*.{vue,css,scss}": [
            "npm run style-format",
            "git add"
        ]
    },
    "volta": {
        "node": "16.10.0",
        "npm": "7.24.0"
    }
}
